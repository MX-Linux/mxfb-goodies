#! /bin/bash

###mxfb-appearance released September 2020 by MX Linux Devs
##this app requires the mx-dockmaker Moka icons that are located in /components
##they should be placed in the appropriate section of /usr/share/icons/Moka/
##it also requires the installation of nitrogen

TEXTDOMAINDIR=/usr/share/locale
export TEXTDOMAIN="mxfb-appearance"

TITLE=$"Fluxbox Appearance"
BUTTON1=$"Conky"
BUTTON2=$"Docks"
BUTTON3=$"Desktop icons"
BUTTON4=$"Theme"
BUTTON5=$"Toolbar"
BUTTON6=$"Wallpaper"


yad --geometry=200x64 --center --title=$TITLE  \
--button="!/usr/share/icons/Moka/64x64/apps/conky-manager.png!$BUTTON1":conky-manager2 \
--button="!/usr/share/icons/Moka/64x64/apps/mx-dockmaker.png!$BUTTON2":mx-dockmaker \
--button="""!/usr/share/icons/Moka/64x64/apps/direct-connect.png!$BUTTON3":mx-idesktool \
--button="""!/usr/share/icons/Moka/64x64/apps/cs-themes.png!$BUTTON4":lxappearance \
--button="""!/usr/share/icons/Moka/64x64/apps/cs-general.png!$BUTTON5":toggletint2 \
--button="!/usr/share/icons/Moka/64x64/apps/background.png!$BUTTON6":'nitrogen' \
--window-icon=/usr/share/icons/mxflux.png



